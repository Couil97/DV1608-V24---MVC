{% extends "base.html.twig" %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1 class="site-header">Session</h1>
    <hr>
    <div class="content span-2">
        <div class="session">
            <p>Session: 
                {% if started == false %}
                    <span style="color: red;">Stopped</span>
                {% else %}
                    <span style="color: green;">Started</span>
                {% endif %}
            </p>
            <div style="flex-grow:1; width:100%; height:100%; text-wrap:wrap;">
                    {% for item in session %}
                        <p>
                            {{ item }}
                        </p>
                    {% endfor %}
            </div>

            {{ include('flash.html.twig') }}
            
            <a style="align-self: end; padding: 12px; margin: 12px; border: 1px solid black; border-radius: 12px;" href="{{ path('delete_session') }}">Clear Session</a>
        </div>

    </div>
{% endblock %}